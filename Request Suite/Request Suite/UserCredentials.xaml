<Window x:Class="WpfApplication1.UserCredentials"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginCredentials" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <TextBox Height="23" HorizontalAlignment="Left" Margin="10,10,0,0" Name="txtUserName" VerticalAlignment="Top" Width="120" />
            <PasswordBox Height="23" HorizontalAlignment="Left" Margin="10,10,0,0" Name="pbxPassword" VerticalAlignment="Top" Width="120" />
        </StackPanel>
        <Button Height="23" Name="btnSubmit" Width="75" Click="btnSubmit_Click">Submit</Button>
    </Grid>
</Window>
